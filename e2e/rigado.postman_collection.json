	"item": [
		{
			"name": "getToken",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "1b085405-aa10-4b73-bce2-ca346410be27",
						"exec": [
							"pm.test(\"Access tken returned\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.access_token).to.length.gt(0)",
							"});",
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"var jsonData = pm.response.json();",
							"pm.collectionVariables.set(\"accessToken\", jsonData.access_token);"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/x-www-form-urlencoded",
						"type": "text"
					},
					{
						"key": "Authorization",
						"value": "Basic ",
						"type": "text",
						"disabled": true
					}
				],
				"url": {
					"raw": "{{tokenEnpoint}}?grant_type=refresh_token&client_id={{clientId}}&refresh_token={{refreshToken}}",
					"host": [
						"{{tokenEnpoint}}"
					],
					"query": [
						{
							"key": "grant_type",
							"value": "refresh_token"
						},
						{
							"key": "client_id",
							"value": "{{clientId}}"
						},
						{
							"key": "refresh_token",
							"value": "{{refreshToken}}"
						}
					]
				}
			},
			"response": []
		},
